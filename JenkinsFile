pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    def isUnix = isUnix()
                    if (isUnix) {
                        sh 'echo "Running on Unix/Linux environment"'
                    } else {
                        docker version
                        docker info
                        docker compose version
                        curl --version
                        jq --version
                    }
                }
            }
        }

    }
}
