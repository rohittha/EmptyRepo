pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    def isUnix = isUnix()
                    if (isUnix) {
                        sh 'echo "Running on Unix/Linux environment"'
                    } else {
                        bat 'echo "Running on Windows environment. "'
                        bat 'docker version'
                        bat 'echo "running docker info!"'
                        bat 'docker info'
                        bat 'echo "Batch 1 complete!"'
                        bat 'docker-compose version'
                        bat 'echo "Batch 2 complete! checking curl"'
                        bat 'curl --version'
                        bat 'echo "Batch 3 complete! checking jq version!"'
                        bat 'jq --version'
                    }
                }
            }
        }

    }
}
